<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.freetoeic.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_category"
            android:text="Category"
            android:textColor="#080461"
            android:textSize="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_expand_more_black_24dp"/>

        <TextView
            android:id="@+id/tv_category_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contract, Marketing, Warranties, Business, Planning, Conference"
            android:textColor="#372df7"
            android:textSize="14dp" />

    </LinearLayout>

</ScrollView>
